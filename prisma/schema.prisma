// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider     = "prisma-kysely"
  output       = "../src/models"
  fileName     = "types.ts"
  enumFileName = "enum.ts"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  email             String            @id
  name              String?
  password          String?
  role              String?
  birth_date        DateTime?
  phoneNumber       String?
  records           Record[]
  allergies         AllergyMedicine[]
  treatments        TreatmentUser[]
  labResults        LabResultUser[]
  provinsi          String?
  kota              String?
  kecamatan         String?
  kelurahan         String?
}

model Record {
  id           Int           @id @default(autoincrement())
  doctorEmail  String
  patientEmail String
  createdAt    DateTime         @default(now())
  description  String?
  diagnose     Diagnose?        @relation(fields: [diagnoseId], references: [id])
  patient      User             @relation(fields: [patientEmail], references: [email])
  medicines    MedicineRecord[]
  diagnoseId   Int?
}

model Medicine {
  id              Int            @id @default(autoincrement())
  name            String
  records         MedicineRecord[]
  AllergyMedicine AllergyMedicine[]
}

model Diagnose {
  id       Int   @id @default(autoincrement())
  name     String
  category String
  records  Record[]
}

model MedicineRecord {
  recordId   Int
  medicineId Int
  dose       String
  record     Record   @relation(fields: [recordId], references: [id])
  medicine   Medicine @relation(fields: [medicineId], references: [id])

  @@id([recordId, medicineId])
}

model AllergyMedicine {
  patientEmail String
  medicineId   Int
  diagnosedAt  DateTime @default(now())
  patient      User     @relation(fields: [patientEmail], references: [email])
  medicine     Medicine @relation(fields: [medicineId], references: [id])

  @@id([patientEmail, medicineId])
}

model TreatmentCategory {
  id         Int          @id @default(autoincrement())
  category   String
  treatments TreatmentUser[]
}

model TreatmentUser {
  id           Int            @id @default(autoincrement())
  category     Int
  patientEmail String
  treatmentAt  DateTime          @default(now())
  description  String?
  doctorEmail  String
  categoryType TreatmentCategory @relation(fields: [category], references: [id])
  patient      User              @relation(fields: [patientEmail], references: [email])
}

model LabResultCategory {
  id         Int          @id @default(autoincrement())
  category   String
  labResults LabResultUser[]
}

model LabResultUser {
  id                  Int            @id @default(autoincrement())
  category            Int
  patientEmail        String
  result_document_URL String
  description         String?
  doctorEmail         String
  categoryType        LabResultCategory @relation(fields: [category], references: [id])
  patient             User              @relation(fields: [patientEmail], references: [email])
}
